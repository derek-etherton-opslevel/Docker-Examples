<h1>Admin - Edit Post</h1>

<%= form_with model: [:admin, @post], local: true do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 15 %>
  </div>
  
  <div class="form-group">
    <%= f.check_box :published %>
    <%= f.label :published, "Published" %>
  </div>
  
  <%= f.submit "Update Post", class: "btn" %>
  <%= link_to "Cancel", admin_post_path(@post), class: "btn", style: "background: #95a5a6;" %>
<% end %>
